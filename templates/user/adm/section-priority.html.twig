<div class="card mb-3">
    <div class="card-header">Приоритеты премиум анкет</div>
    <div class="card-body p-2">
        {% if priority.sort is defined %}
            <p class="text-end mb-1">Сортированные</p>
            {% for item in priority.sort.items %}
                <div class="row g-1 mb-1">
                    <div class="col-3">
                        <button
                                class="btn btn-secondary btn-sm w-100"
                                disabled
                        >ID: {{ item.item.id }}</button>
                    </div>
                    <div class="col-7">
                        <button
                                class="btn btn-light btn-sm w-100 text-uppercase text-dark"
                                disabled
                        >{{ item.premiumpriority }} место</button>
                    </div>
                    <div class="col-2">
                        <form method="POST">
                            <input type="hidden" name="priority[id]" value="{{ item.item.id }}">
                            <button
                                    class="btn btn-danger btn-sm w-100"
                                    name="priority[value]"
                                    value="0"
                            ><i class="fa-solid fa-xmark"></i></button>
                        </form>
                    </div>
                </div>
            {% endfor %}
            <hr class="border border-secondary border-2 opacity-75 my-2" />
        {% endif %}
        <p class="text-end mb-1">Несортированные</p>
        {% for item in priority.unsort.items %}
            <div class="row g-1 mb-1">
                <div class="col-3">
                    <button
                            class="btn btn-secondary btn-sm w-100"
                            disabled
                    >ID: {{ item.item.id }}</button>
                </div>
                <div class="col-9">
                    <form method="POST">
                        <input type="hidden" name="priority[id]" value="{{ item.item.id }}">
                        <label class="w-100">
                            <select
                                    class="form-select form-select-sm"
                                    onchange="form.submit()"
                                    name="priority[value]"
                            >
                                <option selected disabled hidden>Приоритет</option>
                                {% for i in priority.place %}
                                    <option value="{{ i }}">на {{ i }} место</option>
                                {% endfor %}
                            </select>
                        </label>
                    </form>
                </div>
            </div>
        {% endfor %}
    </div>
</div>